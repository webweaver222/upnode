<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>UpNode</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/flip.css">
    <link rel="stylesheet" href="/stylesheets/file-icons-js/css/style.css">

    
</head>
<body>
    <div id="video-bg">
        <video id = "vid" autoplay muted loop>
            <source src="/vid/rain.mp4" type="video/mp4">
            <source src="/vid/rain.ogg" type="video/ogg">
        </video>
    </div>

    <div class="menu-container">
        
        <div class="flip-container">
        {{#unless theFile}}
            <span class="back-arrow">&#8592;</span>
            {{else}}
            <span class="back-arrow" style="display:inline">&#8592;</span>
         {{/unless}}   
        <div class="theflip">
        <div class="menu">
            {{#unless theFile}}
                <h1>Welcome to the UpNode.loc</h1>
                    <div class="dropzone">
                        <input id="file-upload" type="file"/>
                        <span>Drop your file here</span>
                        <p></p>
                    </div>
            {{else}}
                <div class="file-container">
                    <div class="file-name">
                        {{theFile.originalName}}.{{theFile.ext}}
                    </div>
                   <div class="file-icon">
                       <i class="{{theFile.className}}"></i>
                   </div>
                </div>

                <audio controls>
                    <source src="{{theFile.url}}" type="audio/x-m4a" />
                     <source src="{{theFile.url}}" type="audio/mpeg"> />
                    Your browser does not support the audio element.
                </audio>

                <div class="download-button">
                    <button>download</button>
                </div>
            {{/unless}}

            {{#if theUser}}
                <ul>
                    <li class="up" style="display:none;"><a href="#">Sign Up</a></li>
                    <li class="in" style="display:none;"><a href="#">Sign In</a></li>
                    <li class="out" style="display:block"><a href="#">Log Out</a></li>
                </ul>
            {{else}}
            <ul>
                <li class="up" style="display:block;"><a href="#">Sign Up</a></li>
                <li class="in" style="display:block;"><a href="#">Sign In</a></li>
                <li class="out" style="display:none"><a href="#">Log Out</a></li>
            </ul>
             {{/if}}
        </div>

        <div class="signup">
            <form action="" method="post">
                <div class="field-container">
                    <label for="email">Email</label>
                    <input  type="text" name="email" >
                </div>
                <div class="field-container">
                    <label for="username">Username</label>
                    <input type="text" name="username">
                </div>
                <div class="field-container">
                    <label for="password">Password</label>
                    <input  type="password" name="password" >
                </div>
                <div class="field-container">
                    <label for="password2">Confirm Password</label>
                    <input  type="password" name="repass" >
                </div>
                <input type="hidden" name="up">

                <button class='submit' type="submit" >Sign Up</button>
            </form>
        </div>

        <div class="signin">
            <form action="" method="post">
                <div class="field-container">
                    <label for="email">Email</label>
                    <input class = "email" type="text" name="email" >
                </div>
                 <div class="field-container">
                    <label for="password">Password</label>
                    <input class = "password" type="password" name="password" >
                </div>
                <input type="hidden" name="in">

                 <button class='submit' type="submit"  onclick="e.preventDefault()" >Sign In</button>

                 
            </form>

           
        </div>
        
        </div>
        </div>

        
        
    </div>
    
  
   
    {{>footer}}
    <script  src="/javascripts/functions.js"></script>
    <script  src="/javascripts/events.js"></script>
    <script  src="/javascripts/forms.js"></script>
  
    
    
</body>
</html>